@model List<Category>
@{
    Layout = "StoreOwnerLayout";
}
<h1>Category List</h1>
<table class="table table-info">
    <tr>
        <th class="h3 text-primary" colspan="2">Category management</th>
        <th>
            <a class="btn btn-success" asp-controller="Category" asp-action="Add">Add</a>
        </th>
    </tr>
    <tr>
        <th>Category Id</th>
        <th>Category Name</th>
        <th class="text-center">Menu</th>
    </tr>
    @foreach (var cate in Model)
    {
        if (cate.Status == 1){
            <tr>
                <td>@cate.Id</td>
                <td>@cate.Name</td>
                <td class="text-center">
                
                    <a asp-controller="Category" asp-action="Edit" class="btn btn-warning"
                    asp-route-id="@cate.Id">Edit</a>
                    <a asp-controller="Category" asp-action="Delete" class="btn btn-danger"
                    asp-route-id="@cate.Id" onclick="return confirm('Are you sure to remove this category ?');">Remove</a>
                </td>
            </tr>
        }
        
    }
</table>