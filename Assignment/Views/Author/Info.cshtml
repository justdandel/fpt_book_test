@model Assignment.Models.Author

<div class="container text-center">
    <div class="row">
        <div class="col">
            <img src="@Model.Img" width="300" height="300" />
            <h2 class="text text-success mt-3">@Model.Name</h2>
        </div>
        <div class="col">
            <table class="table table-bordered">
                <tr>
                    <th colspan="2">Student List</th>
                    <th>TOTAL: @Model.BookList.Count</th>
                </tr>
                <tr>
                    <th>Book Name</th>
                    <th>Book edition </th>
                    <th>Book image</th>
                </tr>
                @foreach (var a in Model.BookList)
                {
                    <tr>
                        <td>@a.Name</td>
                        <td>@a.Edition</td>
                        <td>
                            <a asp-controller="Author" asp-action="Detail" asp-route-id="@a.Id">
                                <img src="@a.Img" width="80" height="80">
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>